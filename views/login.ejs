<div class="row">
  <div id="stage" class="span12">
    <div class="content-stage">
      <div class="login-form">
        <div class="tabbable">
          <ul class="nav nav-tabs">
            <li class="active" data-url="/signup" id="signup-tab"><a>Sign up</a></li>
            <li data-url="/login" id="login-tab"><a>Log in</a></li>
          </ul>
          <div class="tab-content">
            <div class="alert login-alert" id="user-exists">
              Username already exists. Please choose a different username.
            </div>
            <div class="alert login-alert" id="login-failed">
              Login failed. Please check username or password.
            </div>
            <form method="post" action="/signup">
              <fieldset>
                <div class="clearfix">
                  <input name="username" type="text" placeholder="Username">
                </div>
                <div class="clearfix">
                  <input name="password" type="password" placeholder="Password">
                </div>
                <button class="btn primary" type="submit">Sign in</button>
              </fieldset>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
